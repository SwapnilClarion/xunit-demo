{
    "compilerOptions": {
        "lib": [
            "dom",
            "es7"
        ],
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,              
        "baseUrl": ".",
        "paths": {
                "*": [ "./*" ],
                "pageObjects/*": ["./test/pageobjects/*"],
                "test/specs/*": ["./test/specs/*"],
        },
        "types": ["@wdio/mocha-framework", "node", "chai", "@wdio/sync"]
    },    
    "include": [
        "./test/specs/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ],
    "compileOnSave": false
  }
